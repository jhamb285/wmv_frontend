          options={mapOptions}
          onLoad={onMapLoad}
          onUnmount={onMapUnmount}
          onClick={() => {
            console.log('üó∫Ô∏è MAP CLICKED - Closing floating panel');
            setIsFloatingPanelOpen(false);
            setSelectedVenue(null);
          }}
        >
        {/* Advanced Markers are now created directly in onMapLoad using clustering */}
