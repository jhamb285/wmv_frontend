                      <span>{rating}+ Stars</span>
                      <span className="text-yellow-400">‚òÖ</span>
                    </button>
                  ))}
                </div>
              </div>

              {/* Event Time Filter */}
              {filterOptions?.times && filterOptions.times.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Event Time</h3>
                  <div className="flex flex-wrap gap-2 max-h-48 overflow-y-auto">
                    {filterOptions.times.map(time => (
                      <button
                        key={time}
                        onClick={() => {
                          const newTimes = filters.selectedTimes?.includes(time)
                            ? filters.selectedTimes.filter(t => t !== time)
                            : [...(filters.selectedTimes || []), time];

                          onFiltersChange({
                            ...filters,
                            selectedTimes: newTimes
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.selectedTimes?.includes(time)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {time}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Ticket Price Filter */}
              {filterOptions?.ticketPrices && filterOptions.ticketPrices.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Ticket Price Range</h3>
                  <div className="flex flex-wrap gap-2">
                    {filterOptions.ticketPrices.map(price => (
                      <button
                        key={price}
                        onClick={() => {
                          const newPrices = filters.selectedTicketPrices?.includes(price)
                            ? filters.selectedTicketPrices.filter(p => p !== price)
                            : [...(filters.selectedTicketPrices || []), price];

                          onFiltersChange({
                            ...filters,
                            selectedTicketPrices: newPrices
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.selectedTicketPrices?.includes(price)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {price}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Venue Price Filter */}
              {filterOptions?.venuePrices && filterOptions.venuePrices.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Venue Price Range</h3>
                  <div className="flex flex-wrap gap-2">
                    {filterOptions.venuePrices.map(price => (
                      <button
                        key={price}
                        onClick={() => {
                          const newPrices = filters.selectedVenuePrices?.includes(price)
                            ? filters.selectedVenuePrices.filter(p => p !== price)
                            : [...(filters.selectedVenuePrices || []), price];

                          onFiltersChange({
                            ...filters,
                            selectedVenuePrices: newPrices
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.selectedVenuePrices?.includes(price)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {price}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Atmosphere Filter */}
              {filterOptions?.atmospheres && filterOptions.atmospheres.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Venue Atmosphere</h3>
                  <div className="flex flex-wrap gap-2 max-h-48 overflow-y-auto">
                    {filterOptions.atmospheres.map(atmosphere => (
                      <button
                        key={atmosphere}
                        onClick={() => {
                          const newAtmospheres = filters.selectedAtmospheres?.includes(atmosphere)
                            ? filters.selectedAtmospheres.filter(a => a !== atmosphere)
                            : [...(filters.selectedAtmospheres || []), atmosphere];

                          onFiltersChange({
                            ...filters,
                            selectedAtmospheres: newAtmospheres
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.selectedAtmospheres?.includes(atmosphere)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {atmosphere}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Event Categories Filter */}
              {filterOptions?.eventCategories && filterOptions.eventCategories.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Event Categories</h3>
                  <div className="flex flex-wrap gap-2 max-h-48 overflow-y-auto">
                    {filterOptions.eventCategories.map(category => (
                      <button
                        key={category}
                        onClick={() => {
                          const newCategories = filters.selectedEventCategories?.includes(category)
                            ? filters.selectedEventCategories.filter(c => c !== category)
                            : [...(filters.selectedEventCategories || []), category];

                          onFiltersChange({
                            ...filters,
                            selectedEventCategories: newCategories
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.selectedEventCategories?.includes(category)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {category}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Venue Categories */}
              {filterOptions?.venueCategories && filterOptions.venueCategories.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Venue Type</h3>
                  <div className="flex flex-wrap gap-2">
                    {filterOptions.venueCategories.map(category => (
                      <button
                        key={category}
                        onClick={() => {
                          const newCategories = filters.selectedVenueCategories?.includes(category)
                            ? filters.selectedVenueCategories.filter(c => c !== category)
                            : [...(filters.selectedVenueCategories || []), category];

                          onFiltersChange({
                            ...filters,
                            selectedVenueCategories: newCategories
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.selectedVenueCategories?.includes(category)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {category}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Special Offers */}
              {filterOptions?.specialOffers && filterOptions.specialOffers.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Special Offers</h3>
                  <div className="flex flex-wrap gap-2 max-h-48 overflow-y-auto">
                    {filterOptions.specialOffers.map(offer => (
                      <button
                        key={offer}
                        onClick={() => {
                          const newOffers = filters.activeOffers?.includes(offer)
                            ? filters.activeOffers.filter(o => o !== offer)
                            : [...(filters.activeOffers || []), offer];

                          onFiltersChange({
                            ...filters,
                            activeOffers: newOffers
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.activeOffers?.includes(offer)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {offer}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Dates Section */}
              {filterOptions?.dates && filterOptions.dates.length > 0 && (
                <div>
                  <h3 className="text-lg font-semibold text-gray-900 mb-3">Event Dates</h3>
                  <div className="flex flex-wrap gap-2 max-h-64 overflow-y-auto">
                    {filterOptions.dates.slice(0, 20).map(date => (
                      <button
                        key={date}
                        onClick={() => {
                          const newDates = filters.activeDates?.includes(date)
                            ? filters.activeDates.filter(d => d !== date)
                            : [...(filters.activeDates || []), date];

                          onFiltersChange({
                            ...filters,
                            activeDates: newDates
                          });
                        }}
                        className={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
                          filters.activeDates?.includes(date)
                            ? 'bg-blue-500 text-white shadow-md'
                            : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                        }`}
                      >
                        {date}
                      </button>
                    ))}
                  </div>
                </div>
              )}

              {/* Clear All Button */}
              <button
                onClick={() => {
                  onFiltersChange({
                    ...filters,
                    selectedAreas: ['All Dubai'],
                    activeDates: [],
                    activeOffers: [],
                    searchQuery: '',
                    selectedRatings: [],
                    selectedVenueCategories: [],
                    selectedTimes: [],
                    selectedTicketPrices: [],
                    selectedVenuePrices: [],
                    selectedAtmospheres: [],
                    selectedEventCategories: [],
                    eventCategories: {
                      selectedPrimaries: [],
                      selectedSecondaries: {},
                      expandedPrimaries: []
                    }
                  });
                  setIsFilterSheetOpen(false);
                }}
                className="w-full py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg transition-colors"
              >
                Clear All Filters
              </button>
            </div>

            {/* Scroll Indicator - Shows when there's more content below */}
            <div className="sticky bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-white/95 to-transparent pointer-events-none mt-4" />
          </div>
        </div>
      )}

    </div>
  );
};

export default MapContainer;